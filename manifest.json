{
  "manifest_version": 3,
  "name": "Link Clickable Maker",
  "version": "1.0.0",
  "description": "Makes every plain text URL on websites clickable",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/iconfull.png",
      "48": "icons/iconfull.png",
      "128": "icons/iconfull.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
