{
  "manifest_version": 3,
  "name": "Link Clickable Maker",
  "version": "1.0.0",
  "description": "Maakt alle URL's in tekst op websites klikbaar",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
